-- -----------------------------------------------------
-- Table `bd_promost`.`Usuarios`
-- -----------------------------------------------------
CREATE TABLE IF NOT EXISTS `bd_promost`.`Usuarios` (
  `idUsuario` INT NOT NULL AUTO_INCREMENT,
  `Nombre` VARCHAR(45) NOT NULL,
  `ApellidoPaterno` VARCHAR(45) NOT NULL,
  `ApellidoMaterno` VARCHAR(45) NOT NULL,
  `Domicilio` VARCHAR(45) NOT NULL,
  `Telefono` VARCHAR(45) NOT NULL,
  `RFC` VARCHAR(45) NOT NULL,
  `FechaIngreso` DATE NULL,
  `Activo` VARCHAR(1) NULL,
  `FechaCreacion` DATE NULL,
  `FechaModificacion` DATE NULL,
  `Login_idLogin` INT NOT NULL,
  PRIMARY KEY (`idUsuario`, `Login_idLogin`),
  INDEX `fk_Usuarios_Login_idx` (`Login_idLogin` ASC),
  CONSTRAINT `fk_Usuarios_Login`
    FOREIGN KEY (`Login_idLogin`)
    REFERENCES `bd_promost`.`Login` (`idLogin`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB;


